class GeometryCalculator {
  def area(radius: Double): Double = Math.PI * radius * radius
  //simple method to calculate the area of a circle
  def area(length: Double, width: Double): Double = length * width
  //simple method to calculate the area of a rectangle
}
object GeometryCalculatorApp {
  def main(args: Array[String]): Unit = {
    val calculator = new GeometryCalculator()
    println(s"Area of a circle: ${calculator.area(5.0)}")
    println(s"Area of a rectangle: ${calculator.area(4.0, 6.0)}")
   
  }
}
